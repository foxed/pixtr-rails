<p><%= @image.name %>
<div><%= image_tag(@image.url, width: 300) %></div>
<p>
<p><%= @image.description %>
<p>uploaded by: <%= link_to @image.user.email, @image.user %> at <%= @image.created_at.strftime("%B %d, %Y") %> 


<% if @image.user == current_user %>
  <div>
    <%= link_to "Edit Image", edit_image_path(@image) %>, 
    <%= link_to "Delete Image", @image, method: :delete, confirm: "Are you sure you want to delete this image?" %>
  </div>
<% end %>

<div>
<% if signed_in? %>
  <%= form_for([@image, @comment]) do |form| %>
    <%= form.text_area :body %>
    <%= form.submit "Comment" %>
  <% end %>
<% else %>
    <%= link_to "Sign in", sign_in_path %> to comment
<% end %>
    <%= render @comments %>
    <%= paginate @comments %>
</div>
