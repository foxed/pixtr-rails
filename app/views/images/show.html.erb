<h3> <%= @image.name %> </h3>
<div>
  <%= image_tag(@image.url, width: 300) %>
</div>
<div>
  <%= @image.description %>
</div>
<p>
<div>
  <% if signed_in? %>
    <% if current_user.voted? @image %> 
      <%= button_to "Downvote", unvote_image_path(@image), method: :delete %>
    <% else %>
      <%= button_to "Upvote", vote_image_path(@image) %>
    <% end %>
  <% end %>
</div>
<p>
<div>
  <%= pluralize(@image.votes.count, "upvotes") %> <br>
  uploaded by: <%= link_to @image.user.email, @image.user %> at <%= @image.created_at.strftime("%B %d, %Y") %> 
</div>
<p>
<% if @image.user == current_user %>
  <div>
    <%= link_to "Edit Image", edit_image_path(@image) %>, 
    <%= link_to "Delete Image", @image, method: :delete, confirm: "Are you sure you want to delete this image?" %>
  </div>
<% end %>

<div>
  <% if signed_in? %>
    <%= form_for([@image, @comment]) do |form| %>
      <%= form.text_area :body %>
      <%= form.submit "Comment" %>
    <% end %>
  <% else %>
    <%= link_to "Sign in", sign_in_path %> to comment
  <% end %>
    <%= render @comments %>
    <%= paginate @comments %>
</div>
