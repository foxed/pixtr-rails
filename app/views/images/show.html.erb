<h3><%= @image.name %></h3>
<h3><%= @image.description %></h3>

<div><%= image_tag(@image.url, width: 200) %></div>
<p>

<% if @image.user == current_user %>
<div>
<%= link_to "Edit Image", edit_image_path(@image) %>, 
<%= link_to "Delete Image", @image, method: :delete, confirm: "Are you sure you want to delete this image?" %>
</div>
<% end %>

<%= form_for([@image, @comment]) do |form| %>
  <%= form.text_area :body %>
  <%= form.submit "Comment" %>
<% end %>

<div>
<% @image.comments.each do |comment| %>
  <div>"<%= comment.body %>" posted by <%= comment.user.email %> </div>
<% end %>
</div>
